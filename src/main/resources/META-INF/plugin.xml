<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.kangwooc.dbmlplugin</id>
    <name>dbml-plugin</name>
    <vendor>kangwooc</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="DBML"
                language="DBML"
                extensions="dbml"
                implementationClass="com.github.kangwooc.dbmlplugin.lang.DBMLFileType"/>

        <lang.parserDefinition
                language="DBML"
                implementationClass="com.github.kangwooc.dbmlplugin.lang.psi.DBMLParserDefinition"/>

        <lang.syntaxHighlighterFactory
                language="DBML"
                implementationClass="com.github.kangwooc.dbmlplugin.lang.highlighting.DBMLSyntaxHighlighterFactory"/>

        <completion.contributor
                language="DBML"
                implementationClass="com.github.kangwooc.dbmlplugin.lang.completion.DBMLCompletionContributor"/>
        <completion.contributor
                language="TEXT"
                implementationClass="com.github.kangwooc.dbmlplugin.lang.completion.DBMLCompletionContributor"/>

        <localInspection
                language="DBML"
                groupPath="DBML"
                shortName="DBMLTableStructure"
                displayName="Validate DBML table sections"
                enabledByDefault="true"
                implementationClass="com.github.kangwooc.dbmlplugin.lang.inspection.DBMLTableStructureInspection"/>

        <codeInsight.lineMarkerProvider
                language="DBML"
                implementationClass="com.github.kangwooc.dbmlplugin.lang.annotator.DBMLColorAnnotator"/>

        <psi.referenceContributor
                language="DBML"
                implementation="com.github.kangwooc.dbmlplugin.lang.reference.DBMLReferenceContributor"/>

        <renamePsiElementProcessor
                implementation="com.github.kangwooc.dbmlplugin.lang.refactoring.DBMLRenameProcessor"/>

        <lang.refactoringSupport
                language="DBML"
                implementationClass="com.github.kangwooc.dbmlplugin.lang.refactoring.DBMLRefactoringSupportProvider"/>

        <lang.findUsagesProvider
                language="DBML"
                implementationClass="com.github.kangwooc.dbmlplugin.lang.findUsages.DBMLFindUsagesProvider"/>

        <lang.psiStructureViewFactory
                language="DBML"
                implementationClass="com.github.kangwooc.dbmlplugin.lang.structure.DBMLStructureViewFactory"/>

        <breadcrumbsInfoProvider
                implementation="com.github.kangwooc.dbmlplugin.lang.breadcrumbs.DBMLBreadcrumbsProvider"/>

        <toolWindow factoryClass="com.github.kangwooc.dbmlplugin.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <postStartupActivity implementation="com.github.kangwooc.dbmlplugin.startup.MyProjectActivity" />
    </extensions>
</idea-plugin>
